<div class="post p-0">
    <div class="title">
        <div class="card-header text-center">
            <a class="nav-link" href="/post/{{id}}">{{title}}</a>
        </div>

        <div class="content justify-content-center p-3">
            <p>{{post_text}}</p>
        </div>
    </div>

    <div class="text-right p-3" style="float:right">
        {{comments.length}} {{format_plural ": Comment" comments.length}} - Posted by {{user.username}} on {{format_date
        created_at}}
    </div>
</div>
